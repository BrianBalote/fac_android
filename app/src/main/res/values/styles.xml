<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FacIconRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FacIconContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FacIconImage">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="FacIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#3C3C35</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopBar">
    </style>

    <style name="TopBarTitle">
    </style>

    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">none</item>
        <item name="android:clickable">true</item>
        <item name="android:divider">#E8E8E8</item>
        <item name="android:dividerHeight">0.75dp</item>
        <item name="android:focusable">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="ListItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#555555</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="ListItemDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="ListItemMultiLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:gravity">left</item>
    </style>

</resources>