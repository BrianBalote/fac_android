<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopping_list_row_container"
    style="@style/ListItemContainer">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_agenda_name"
            style="@style/ListItemTitle"
            android:text="Agenda Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_agenda_date"
                style="@style/ListItemDetails"
                android:text="Agenda Date"
                 />

            <TextView
                android:id="@+id/text_agenda_start_time"
                style="@style/ListItemDetails"
                android:text="Start Time"
                 />

            <TextView
                android:id="@+id/text_agenda_end_time"
                style="@style/ListItemDetails"
                android:text="End Time"
                 />

        </LinearLayout>

        <TextView
            android:id="@+id/text_agenda_speakers"
            style="@style/ListItemDetails"
            android:text="Agenda Speakers"
             />

        <TextView
            android:id="@+id/text_agenda_description"
            style="@style/ListItemDetails"
            android:text="Agenda Description"
             />

    </LinearLayout>

</RelativeLayout>
